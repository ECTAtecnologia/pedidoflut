                        <label for="valor">Valor Total:</label>
                        <input type="text" 
                               class="form-control-caixa" 
                               id="valor" 
                               inputmode="numeric"
                               placeholder="R$ 0,00"
                               required>
                    </div>
                    
                    <button type="button" class="btn-imprimir-caixa" onclick="imprimirPedido()">Imprimir Pedido</button>
